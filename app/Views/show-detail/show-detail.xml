<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="onPageLoaded" navigatingTo="onNavigatingTo" class="page">
    <ActionBar id="actionbar" title="{{ naviTitle }}" icon="" class="action-bar" cssClass="navi-color">
    </ActionBar>
    <GridLayout columns="*, *" rows="*, *">
        <Image src="{{showContent.poster}}" stretch="aspectFit" row="0" col="0" stretch="aspectFit" cssClass="detail-img" />
        <StackLayout orientation="vertical" row="0" col="1">
            <Label text="Descrpition"  cssClass="desc-label" />
            <TextView text="{{showContent.overview}}" cssClass="desc-text" />
        </StackLayout>
    </GridLayout>
</Page>