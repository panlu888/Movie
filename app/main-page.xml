<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" navigatingTo="onNavigatingTo" class="page">
  <TabView id="tabView">
    <TabView.items>
      <TabViewItem title="Movies" iconSource="~/UI/tab/Dep-A">
        <TabViewItem.view>
          <ListView items="{{ myItems }}">
            <ListView.itemTemplate>
              <Label text="{{ title }}" textWrap="true" class="title" />
            </ListView.itemTemplate>
          </ListView>
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Theatres" iconSource="~/UI/tab/Dep-S">
        <TabViewItem.view>
          <Label text="Theatres" />
        </TabViewItem.view>
      </TabViewItem>
      <TabViewItem title="Profile" iconSource="~/UI/tab/Dep-U">
        <TabViewItem.view>
          <Label text="Profile" />
        </TabViewItem.view>
      </TabViewItem>
    </TabView.items>
  </TabView>
</Page>